@model IEnumerable<Heroes.Game.Player>


@{
    ViewData["Title"] = "fight";
}
<br />

@foreach (var item in Model)
{


    @using (Html.BeginForm("Attack", "Home", FormMethod.Post))
    {

        <button type="submit" class="btn btn-default" name="type" value="A"><img src="~/images/Archer.png" style="width:200px;height:250px;border:4px solid  @Html.DisplayFor(modelItem => item.PlayerArmy.Archers.IsFighting);" /></button>
        <button type="submit" class="btn btn-default" name="type" value="K"><img src="~/images/Knight.png"style="width:200px;height:250px;border:4px solid  @Html.DisplayFor(modelItem => item.PlayerArmy.Knights.IsFighting);"  /></button>
        <button type="submit" class="btn btn-default" name="type" value="D"><img src="~/images/Dragon.png"style="width:200px;height:250px;border:4px solid  @Html.DisplayFor(modelItem => item.PlayerArmy.Dragons.IsFighting);"  /></button>
        <button type="submit" class="btn btn-default" name="type" value="G"><img src="~/images/Gryphon.png" style="width:200px;height:250px;border:4px solid  @Html.DisplayFor(modelItem => item.PlayerArmy.Gryphons.IsFighting);"  /></button>
        

    }




    <br />

    <table style="font-size:30px; padding-right:6px;">
        <tr>
            <td>
                <b>  archers :     @Html.DisplayFor(modelItem => item.PlayerArmy.Archers.Population)  ini @Html.DisplayFor(modelItem => item.PlayerArmy.Archers.Initiative) </b>
            </td>

            <td>
                <b>    Knights :       @Html.DisplayFor(modelItem => item.PlayerArmy.Knights.Population)  ini @Html.DisplayFor(modelItem => item.PlayerArmy.Knights.Initiative)</b>
            </td>

            <td>
                <b>        Dragons :  @Html.DisplayFor(modelItem => item.PlayerArmy.Dragons.Population)   ini @Html.DisplayFor(modelItem => item.PlayerArmy.Dragons.Initiative)</b>
            </td>
            <td>
                <b>       Gryphons :   @Html.DisplayFor(modelItem => item.PlayerArmy.Gryphons.Population)   ini @Html.DisplayFor(modelItem => item.PlayerArmy.Gryphons.Initiative)</b>
            </td>
        </tr>
    </table>
    <br />
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>
<h3>ble bel bel</h3>
